<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="Shut_Down_App.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Shut_Down_App"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Hours: " Grid.Column="0" VerticalAlignment="Top" Margin="5"/>
        <TextBox x:Name="hoursTextBox" Grid.Column="1" Width="100" Margin="5"/>

        <TextBlock Text="Minutes: " Grid.Column="0" VerticalAlignment="Center" Margin="5" Grid.Row="1"/>
        <TextBox x:Name="minutesTextBox" Grid.Column="1" Width="100" Margin="5" Grid.Row="1"/>

        <Button x:Name="submitButton" Grid.Row="1" Grid.Column="2" Click="submitButtonClick">Submit</Button>
    </Grid>


</Window>
